body
  width 100%
  font-family Helvetica

.cards
  display inline-block
  height 40px
  margin 10px

.card
  display inline-block
  width 30px
  height 40px
  margin-right 10px
  text-align center
  background-color #333
  .card-title
    color white
    font-size 17px
    line-height 40px
  &.big
    width 50px
    height 60px
    .card-title
      line-height 60px

.user-name
  &.active
    color red
