body
  width 100%
  font-family Helvetica

.cards
  display inline-block
  height 40px
  margin 10px

.card
  display inline-block
  width 30px
  height 40px
  margin-right 10px
  text-align center
  background-color #333
  .card-title
    color white
    font-size 17px
    line-height 40px
  &.big
    width 50px
    height 60px
    .card-title
      line-height 60px
  &.red
    background-color #ea5550
  &.blue
    background-color #4496d3
  &.green
    background-color #65ab31
  &.yellow
    background-color #fcc800

.user
  &.active .user-name
    color red
  &.finished .user-name
    color blue
  &.skipped
    opacity 0.6
  .user-stat
    .remaining-skip
      &::before
        content "("
      &::after
        content ")"

#setup
  margin-bottom 10px
  .setup-user-name
    margin-right 10px
